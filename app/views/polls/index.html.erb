<% content_for(:page_header) {"Participate in our polls right now!"} %>
<p id="notice"><%= notice %></p>


<h1>Polls</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
    <div class="well">
      <h2><%=poll.topic%></h2>
      <% for question in poll.vote_values %>
      <li>
        <%= question.title %>
        </li>
     <% end %>
      <tr>
        <div class="btn-group">
        <td><%= link_to 'Show', poll, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_poll_path(poll) , class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <td><%= link_to 'Participate!', poll_path(poll), class: 'btn btn-primary btn-lg block' %></td>
        </div>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poll', new_poll_path %>
